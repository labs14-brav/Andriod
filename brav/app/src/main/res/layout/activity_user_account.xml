<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".views.UserAccountActivity" android:orientation="vertical">


        <TextView
                android:text="User Account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvLabel" android:textSize="18sp"/>
        <TextView
                android:text="@string/place_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvUserEmail" android:textSize="24sp"/>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button
                android:text="Deactivate Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnDeactivateAccount"
                android:gravity="start"/>
        <Button
                android:text="Sign out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnSignOut"
                android:gravity="start"/>
    </LinearLayout>

</LinearLayout>