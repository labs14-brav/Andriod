<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".UserAccountActivity" android:orientation="vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Contact Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="36sp"/>
        <TextView
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvLabel" android:textSize="24sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvUserName" android:textSize="18sp"/>
        <TextView
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="24sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvUserEmail" android:textSize="18sp"/>
        <TextView
                android:text="Time Zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="24sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvUserTimeZone" android:textSize="18sp"/>

    </LinearLayout>
    <Button
            android:text="Become a Mediator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnBecomeMediator"
            android:gravity="start"/>
</LinearLayout>