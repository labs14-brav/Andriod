<?xml version="1.0" encoding="utf-8"?>


<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".views.CourtCaseFormActivity" android:orientation="vertical" android:layout_margin="8dp">


                <TextView
                        android:text="@string/case_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvCaseNum"
                        android:layout_margin="8dp" android:textSize="18sp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/etCaseNum"
                        android:hint="@string/case_number"
                        android:layout_margin="8dp"/>


                <TextView
                        android:text="@string/court_filing_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvCourtFilingDate"
                        android:layout_margin="8dp" android:textSize="18sp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/etCourtFilingDate"
                        android:hint="@string/court_filing_date"
                        android:layout_margin="8dp"/>

                <TextView
                        android:text="@string/court_jurisdiction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvCourtJurisdiction"
                        android:layout_margin="8dp" android:textSize="18sp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/etCourtJurisdiction"
                        android:hint="@string/court_jurisdiction"
                        android:layout_margin="8dp"/>

                <TextView
                        android:text="@string/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvdescription"
                        android:layout_margin="8dp" android:textSize="18sp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/etDescription"
                        android:hint="@string/description"
                        android:layout_margin="8dp"/>

                <TextView
                        android:text="@string/dispute_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDisputeAmount"
                        android:layout_margin="8dp" android:textSize="18sp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/etDisputeAmount"
                        android:hint="@string/dispute_amount"
                        android:layout_margin="8dp"/>

                <TextView
                        android:text="@string/dispute_Category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDisputeCategory"
                        android:layout_margin="8dp" android:textSize="18sp"/>
                <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spDisputeCategory"
                        android:layout_margin="8dp"/>

                <TextView
                        android:text="@string/parties_contact_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvPartiesContactInfo"
                        android:layout_margin="8dp" android:textSize="18sp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/etPartiesContactInfo"
                        android:hint="@string/parties_contact_info"
                        android:layout_margin="8dp"/>

                <TextView
                        android:text="@string/parties_involved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvPartiesInvolved"
                        android:layout_margin="8dp" android:textSize="18sp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/etPartiesInvolved"
                        android:hint="@string/parties_involved"
                        android:layout_margin="8dp"/>

                <TextView
                        android:text="@string/case_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvCaseNotes"
                        android:layout_margin="8dp" android:textSize="18sp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/etCaseNotes"
                        android:hint="@string/case_notes"
                        android:layout_margin="8dp"/>

                <Button
                        android:text="Create Case"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/btnCourtCase"
                        android:layout_margin="8dp"/>
        </LinearLayout>
</ScrollView>