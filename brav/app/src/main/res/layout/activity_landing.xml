<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".LandingActivity">
   <ScrollView android:layout_width="match_parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginBottom="50sp"
               android:paddingBottom="20sp"
               app:layout_constraintBottom_toTopOf="@id/landing_page_create_case_button"
               android:layout_height="wrap_content">
       <TextView
               android:text="test info"
               android:layout_width="wrap_content"
               android:textColor="@android:color/white"
               android:layout_gravity="center"
               android:textSize="30sp"
               android:layout_height="wrap_content"
               android:id="@+id/textView" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toBottomOf="parent"/>



   </ScrollView>
    <Button android:layout_width="wrap_content"
            android:id="@+id/landing_page_create_case_button"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorAccent"
            android:text="Create Case"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>