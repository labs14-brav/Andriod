<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.thadocizn.brav">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".views.CompletedCasesActivity">
        </activity>
        <activity android:name=".views.ActiveCasesActivity">
        </activity>
        <activity android:name=".views.PendingCasesActivity">
        </activity>
        <activity android:name=".views.MediatorDetailActivity">
        </activity>
        <activity android:name=".views.CaseDetailsActivity">
        </activity>
        <activity android:name=".views.UserAccountActivity">
        </activity>
        <activity android:name=".views.MediatorActivity">
        </activity>
        <activity android:name=".views.OtherCaseActivity">
        </activity>
        <activity android:name=".views.CourtCaseFormActivity">
        </activity>
        <activity
                android:name=".views.CaseActivity"
                android:label="@string/title_activity_case"
                android:parentActivityName=".views.MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.thadocizn.brav.views.MainActivity"/>
        </activity>
        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>